# ================================
# AVALA API - Development Environment
# ================================
# Copy this file to .env.local for local development
# DO NOT commit .env.local to git

# ================================
# NODE ENVIRONMENT
# ================================
NODE_ENV=development

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://avala:avala@localhost:5432/avala?schema=public

# ================================
# REDIS CONFIGURATION
# ================================
# Optional in development - will use in-memory cache if not provided
REDIS_URL=redis://localhost:6379

# ================================
# JWT AUTHENTICATION
# ================================
# REQUIRED: Must be at least 32 characters
# Generate with: openssl rand -base64 64
JWT_SECRET=dev-secret-change-me-in-production-minimum-32-characters-required
JWT_EXPIRES_IN=7d

# ================================
# JANUA OAUTH INTEGRATION
# ================================
JANUA_BASE_URL=http://localhost:3001
JANUA_CLIENT_ID=avala-dev
JANUA_CLIENT_SECRET=dev-client-secret
JANUA_REDIRECT_URI=http://localhost:4000/v1/auth/janua/callback
JANUA_INTERNAL_API_KEY=

# ================================
# SMTP EMAIL CONFIGURATION
# ================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@avala.local

# ================================
# API CONFIGURATION
# ================================
PORT=4000
HOST=0.0.0.0
WEB_URL=http://localhost:3000

# ================================
# APPLICATION URLS
# ================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000

# ================================
# RATE LIMITING
# ================================
THROTTLE_SHORT_LIMIT=3
THROTTLE_MEDIUM_LIMIT=20
THROTTLE_LONG_LIMIT=100

# ================================
# RENEC HARVEST CONFIGURATION
# ================================
RENEC_HARVEST_ENABLED=false

# ================================
# OPTIONAL: BILLING (STRIPE)
# ================================
# STRIPE_WEBHOOK_SECRET=
# STRIPE_SECRET_KEY=

# ================================
# OPTIONAL: AWS S3 STORAGE
# ================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=

# ================================
# OPTIONAL: ANALYTICS & MONITORING
# ================================
# SENTRY_DSN=
# GA_TRACKING_ID=
